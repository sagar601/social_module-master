- if @services
  -unless @services.empty?
    %p
      %strong You can sign in to this account using:
    .services
      - for service in @services
        .service
          =image_tag "providers/#{service.provider_name}_32.png", :size => "32x32"
          .provider= service.provider_name
          .uid= service.uid
          = link_to "X", service, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove"
      .clear

= render :partial => 'shared/socials_list'
.clear